{
  "name": "pet-names",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "server": "cd server && npm install",
    "client": "cd client && npm install",
    "setup": "npm-run-all --parallel server client",
    "postinstall": "npm run setup",
    "clientstart": "cd client && npm run serve",
    "serverstart": "cd server && npm run start",
    "dev": "npm-run-all --parallel serverstart clientstart"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5"
  }
}
